{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es2018"]
  },
  "include": ["./src"]
}
